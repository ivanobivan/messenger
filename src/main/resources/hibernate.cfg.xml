<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Connection settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/chat</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">masterkey</property>
        <!--<property name="hibernate.connection.password">postgres</property>-->
        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL95Dialect</property>
        <!-- Print executed SQL to stdout -->
        <property name="show_sql">true</property>
        <!-- Drop and re-create all database on startup -->
        <property name="hibernate.hbm2ddl.auto">create</property>
        <!-- Annotated entity classes -->
        <mapping class="ru.messenger.database.entity.User"/>
        <mapping class="ru.messenger.database.entity.Message"/>
        <mapping class="ru.messenger.database.entity.Room"/>
    </session-factory>
</hibernate-configuration>
